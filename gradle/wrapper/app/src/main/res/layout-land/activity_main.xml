<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaa"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/Bave"
        android:layout_width="217dp"
        android:layout_height="182dp"
        android:layout_marginStart="8dp"
        android:contentDescription="TODO"
        android:onClick="launchAve"
        app:layout_constraintBottom_toBottomOf="@+id/Bdiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/Bdiary"
        app:layout_constraintTop_toTopOf="@+id/Bdiary"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/images" />


    <ImageButton
        android:id="@+id/Bcalc"
        android:layout_width="220dp"
        android:layout_height="183dp"
        android:layout_marginEnd="8dp"
        android:onClick="launchCalc"
        app:layout_constraintBottom_toBottomOf="@+id/Bdiary"
        app:layout_constraintEnd_toStartOf="@+id/Bdiary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Bdiary"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/diari" />

    <ImageButton
        android:id="@+id/Bdiary"
        android:layout_width="218dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="132dp"
        android:onClick="launchDiary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/diaryyy" />


</android.support.constraint.ConstraintLayout>